                    @*id='contactForm' name="google-sheet" method="post" data-email="#" action=""*@
                    <ul class="form-cover">
                        <li class="inp-name"><input id="Name" asp-for="Name" type="text" name="Name" placeholder="Name" required></li>
                        <li class="inp-name"><input id="LastName" asp-for="LastName" type="text" name="LastName" placeholder="Last Name"></li>
                        <li class="inp-phone"><input id="Phone" asp-for="Phone" type="tel" name="Phone" placeholder="Phone" required number on invalid="this.setCustomValidity('Please enter your phone number)" input="this.setCustomValidity('')" pattern="[7-9]{1}[0-9]{9}"></li>
                        <li class="inp-email"><input id="Email" asp-for="Email" type="email" name="Email" required data-error="Please enter your email" placeholder="E-mail"></li>
                        <li class="inp-text"><textarea id="Message" asp-for="Message" name="Message" placeholder="Message"></textarea></li>
                    </ul>
