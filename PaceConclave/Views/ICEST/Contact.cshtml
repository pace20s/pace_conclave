<script>
        $(window).on('load', function () {
         var msg = JSON.parse('@Html.Raw(Json.Serialize(TempData["ContactError"]))');
            if (msg !== "" && msg != null)
            {
                 toastr.error(msg, 'Error');
            }
            var msgone = JSON.parse('@Html.Raw(Json.Serialize(TempData["ContactSucess"]))');
            if (msgone !== "" && msgone != null)
            {
                toastr.success(msgone, 'Sucess !!');
            }

        });

</script>








